# Telegram Bot Token (BotFather'dan alın)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Groq API Key (https://console.groq.com/keys)
GROQ_API_KEY=your_groq_api_key_here

# Sync Token (Yerel PC ile senkronizasyon için güvenlik anahtarı)
SYNC_TOKEN=your_secure_sync_token_here

# Persistent Storage (Railway Volume Path)
# Railway'de volume oluşturduktan sonra bu path otomatik ayarlanır
RAILWAY_VOLUME_URL=/data/storage

# Port (Railway otomatik ayarlar)
PORT=5000
